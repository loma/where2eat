
<% if flash[:picked] %>
  <h1>I've picked you this place!</h1>
  <%= flash[:picked]["name"] %> at <%= flash[:picked]["location"] %>
<% end %>

<h1>Listing Places</h1>
<%= link_to 'New place', new_place_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th colspan="3"></th>
  </tr>

  <% @places.each do |place| %>
    <tr>
      <td><%= place.name %></td>
      <td><%= place.location %></td>
      <td><%= link_to 'Show', place_path(place) %></td>
      <td><%= link_to 'Edit', edit_place_path(place) %></td>
      <td><%= link_to 'Destroy', place_path(place),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Pick For Me!", controller: "places", action: "pickforme" %>
